<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="coolEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">14sp</item>
        <item name="border_color">@color/black</item>
        <item name="border_radius">10</item>
        <item name="border_stroke">1</item>
    </style>

</resources>
